---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const year = new Date().getFullYear();
let langCode = Astro.currentLocale;
console.log('Current locale:', Astro.currentLocale);
if(langCode == undefined || !["en", "es", "fr", "de"].includes(langCode)) {
	langCode = 'en';
}
const lang = getLangFromUrl(Astro.url) || langCode;
const t = useTranslations(lang);
---

<footer class="flex justify-center pt-5">
	<div class="flex max-w-[960px] flex-1 flex-col">
		<footer class="flex flex-col gap-6 px-5 py-10 text-center @container">
			<div class="flex flex-wrap justify-center gap-4">
				<a href="#"  title="instagram">
					<div class="text-[#637688]" data-icon="InstagramLogo" data-size="24px"
						 data-weight="regular">
						<svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" fill="currentColor"
							 viewBox="0 0 256 256">
							<path
								d="M128,80a48,48,0,1,0,48,48A48.05,48.05,0,0,0,128,80Zm0,80a32,32,0,1,1,32-32A32,32,0,0,1,128,160ZM176,24H80A56.06,56.06,0,0,0,24,80v96a56.06,56.06,0,0,0,56,56h96a56.06,56.06,0,0,0,56-56V80A56.06,56.06,0,0,0,176,24Zm40,152a40,40,0,0,1-40,40H80a40,40,0,0,1-40-40V80A40,40,0,0,1,80,40h96a40,40,0,0,1,40,40ZM192,76a12,12,0,1,1-12-12A12,12,0,0,1,192,76Z"
							></path>
						</svg>
					</div>
				</a>
				<a href="#" title="facebook">
					<div class="text-[#637688]" data-icon="FacebookLogo" data-size="24px" data-weight="regular">
						<svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" fill="currentColor"
							 viewBox="0 0 256 256">
							<path
								d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm8,191.63V152h24a8,8,0,0,0,0-16H136V112a16,16,0,0,1,16-16h16a8,8,0,0,0,0-16H152a32,32,0,0,0-32,32v24H96a8,8,0,0,0,0,16h24v63.63a88,88,0,1,1,16,0Z"
							></path>
						</svg>
					</div>
				</a>
			</div>
			<div class="flex flex-wrap justify-center gap-4">
				<a href={"/"+lang+"/about"}  title="about" class="text-base underline">
					{t('footer.about')}
				</a>
				<a href={"/"+lang+"/services"} title="services" class=" text-base underline">
					{t('footer.service')}
				</a>
			</div>
			<p class="text-[#637688] text-sm font-normal leading-normal"> &copy; <span id="year">{year}</span> Taxi 21 Cala Ratjada. All rights reserved.</p>
			<p class="text-[#637688] text-sm"><a href="https://marcmayol/es" title="marcmayol">Created by Marc Mayol with  <span class="px-2 text-[#000000]">&#9829;</span>  from <span class="text-[#000000]">&#x1F334;</span> Mallorca </a> </p>
		</footer>
	</div>
</footer>
